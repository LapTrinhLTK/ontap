<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gtchon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="hãy chọn môn ôn luyện"
        android:textAllCaps="true"
        android:textAppearance="bold"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/return2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="<"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vật lý"
        android:textSize="24sp"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="110dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        />

    <Button
        android:id="@+id/btnSu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lịch sử"
        android:textSize="24sp"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/btnLy"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/btnHoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hóa học"
        android:textSize="24sp"
        android:layout_below="@id/btnLy"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="địa lý"
        android:textSize="24sp"
        android:layout_below="@id/btnSu"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnHoa"
        android:paddingRight="55dp"
        android:paddingLeft="55dp"

        />

    <Button
        android:id="@+id/btnSinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sinh học"
        android:textSize="24sp"
        android:layout_below="@id/btnHoa"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="30dp"
        android:paddingLeft="25dp"

        />

    <Button
        android:id="@+id/btnGD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GDCD"
        android:textSize="24sp"
        android:layout_below="@id/btnDia"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnSinh"
        android:paddingRight="55dp"
        android:paddingLeft="60dp"

        />





</RelativeLayout>