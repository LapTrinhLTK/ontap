<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/gtchon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hãy chọn bộ đề thi thử"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textAppearance="bold"
        />

    <Button
        android:id="@+id/return1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        />
    <Button
        android:id="@+id/deso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 1"
        android:textSize="24sp"
        android:layout_below="@id/gtchon"
        android:layout_marginTop="110dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 2"
        android:textSize="24sp"
        android:layout_below="@id/gtchon"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/deso1"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 3"
        android:textSize="24sp"
        android:layout_below="@id/deso1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 4"
        android:textSize="24sp"
        android:layout_below="@id/deso2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/deso3"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 5"
        android:textSize="24sp"
        android:layout_below="@id/deso3"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 6"
        android:textSize="24sp"
        android:layout_below="@id/deso4"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/deso5"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 7"
        android:textSize="24sp"
        android:layout_below="@id/deso5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/deso8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề số 8"
        android:textSize="24sp"
